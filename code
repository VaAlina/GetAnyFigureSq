package PrintDataOfFiguresInConsole;

import java.util.Scanner;

public class Main {

	
	public static void main(String[] args)  throws Exception {
		System.out.println("Введите название фигуры, плoщадь которой хотите получить.");
		Scanner sc = new Scanner(System.in);
        String s = sc.nextLine();
	Figure f = new Figure();
    System.out.println(f.getName());
    
    if (s.equals("Rectangular"))
        f = new Rectangular();
    else if (s.equals("Circle"))
        f = new Circle();
    else
        f = new Triangle();
    
    System.out.println(f.getName());

}
}


package PrintDataOfFiguresInConsole;

public class Figure {
	public String getName() {
		return "Figure";
	}

	//public String printSq(){};

}



package PrintDataOfFiguresInConsole;

import java.util.Scanner;


class Rectangular extends Figure {
	int h, w;
	@Override
	public String getName() {
		System.out.println("Введите ширину и высоту.");
		Scanner sc = new Scanner(System.in);
		int h = sc.nextInt();
		int w = sc.nextInt();
		return "Rectangular" + " "+h*w;
	};
}



package PrintDataOfFiguresInConsole;

class Circle extends Figure {
	@Override
	public String getName() {
		return "Circle";
	}
}


package PrintDataOfFiguresInConsole;

import java.util.Scanner;

class Triangle extends Figure {
	@Override
	public String getName() {
		System.out.println("Введите значение основания треугольника.");
		Scanner sc = new Scanner(System.in);
		int a = sc.nextInt();
		System.out.println("Введите значение высоты треугольника.");
		int h = sc.nextInt();
		
		int s = (a*h)/2;
		return "Triangle" + " " + s;
	}
}
